{
    "title" : "Schema for Synonym-Target-Provider Configuration",
    "type" : "object",
    "properties" : {
        "schemaName" : {
            "type" : "string"
        },
        "package" : {
            "type" : "object",
            "properties" : {
                "id": {
                    "type" : "string",
                    "format" : "packageIdString"
                },
                "includeTopLevelObjects" : {
                    "type" : "boolean"
                }
            },
            "additionalProperties" : false,
            "required" : ["id"]
        },
        "objects" : {
            "type" : "array",
            "items" : {
                "type" : "object",
                "properties" : {
                    "schemaName" : {
                        "type" : "string"
                    },
                    "objectName" : {
                        "type" : "string"
                    }
                },
                "required" : ["objectName"],
                "additionalProperties" : false
            }
        },
        "synonymSubpath" : {
            "type" : "string"
        },
        "grantorService" : {
            "type" : "object",
            "properties" : {
                "name" : {
                    "type" : "string"
                },
                "roles" : {
                    "type" : "array",
                    "items" : {
                        "type" : "string"
                    }
                }
            },
            "additionalProperties" : false,
            "required" : ["name"]
        },
        "logicalSchemaName" : {
            "type" : "string"
        }
    },
    "additionalProperties" : false,
    "oneOf" : [
      { "required" : ["grantorService"] },
      { "required" : ["logicalSchemaName"] }
    ],
    "anyOf" : [
      { "required" : ["schemaName"] },
      { "required" : ["package"] },
      { "required" : ["objects"] }                    
    ]    
}
